# ========== Database ==========
MYSQL_ROOT_PASSWORD=aisiem_root
MYSQL_DATABASE=aisiem_db
MYSQL_USER=aisiem
MYSQL_PASSWORD=aisiem_pass

# ========== Redis ==========
REDIS_HOST=redis
REDIS_PORT=6379

# ========== Elasticsearch ==========
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

# ========== LLM Provider ==========
# Options: "openai" (GPT-4o mini), "claude" (Claude Haiku), "ollama" (local), "none" (rules only)
LLM_PROVIDER=openai

# OpenAI API (when LLM_PROVIDER=openai) - default
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Claude API (when LLM_PROVIDER=claude)
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-haiku-4-5-20251001

# Ollama (when LLM_PROVIDER=ollama, for air-gapped/industrial environments)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3

# ========== Mail (Gmail SMTP) ==========
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ========== Webhook (Slack/Discord) ==========
WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
